{
  "name": "clama",
  "displayName": "Clama",
  "description": "An open-source coding assistant optimized for enterprise-grade workflows.",
  "version": "1.0.4",
  "icon": "assets/icons/icon.png",
  "galleryBanner": {
    "color": "#617A91",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "author": {
    "name": "vivek kothandapani"
  },
  "license": "Apache-2.0",
  "publisher": "crantotech",
  "repository": {
    "type": "git",
    "url": "https://github.com/crantotech/clama"
  },
  "homepage": "https://clama.ai",
  "categories": [
    "AI",
    "Chat",
    "Programming Languages",
    "Education",
    "Snippets",
    "Testing"
  ],
  "keywords": [
    "clama",
    "cranto",
    "dev",
    "coding",
    "agent",
    "autonomous",
    "ai"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "clama-ActivityBar",
          "title": "Clama",
          "icon": "$(robot)"
        }
      ]
    },
    "views": {
      "clama-ActivityBar": [
        {
          "type": "webview",
          "id": "clama.SidebarProvider",
          "name": ""
        }
      ]
    },
    "commands": [
      {
        "command": "clama.plusButtonClicked",
        "title": "New Task",
        "icon": "$(add)"
      },
      {
        "command": "clama.mcpButtonClicked",
        "title": "MCP Servers",
        "icon": "$(server)"
      },
      {
        "command": "clama.historyButtonClicked",
        "title": "History",
        "icon": "$(history)"
      },
      {
        "command": "clama.popoutButtonClicked",
        "title": "Open in Editor",
        "icon": "$(link-external)"
      },
      {
        "command": "clama.settingsButtonClicked",
        "title": "Settings",
        "icon": "$(settings-gear)"
      },
      {
        "command": "clama.openInNewTab",
        "title": "Open In New Tab",
        "category": "Clama"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "clama.plusButtonClicked",
          "group": "navigation@1",
          "when": "view == clama.SidebarProvider"
        },
        {
          "command": "clama.mcpButtonClicked",
          "group": "navigation@2",
          "when": "view == clama.SidebarProvider"
        },
        {
          "command": "clama.historyButtonClicked",
          "group": "navigation@3",
          "when": "view == clama.SidebarProvider"
        },
        {
          "command": "clama.popoutButtonClicked",
          "group": "navigation@4",
          "when": "view == clama.SidebarProvider"
        },
        {
          "command": "clama.settingsButtonClicked",
          "group": "navigation@5",
          "when": "view == clama.SidebarProvider"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run build:webview && npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p ./tsconfig.test.json --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "format:fix": "prettier . --write",
    "test": "vscode-test",
    "install:all": "npm install && cd webview-ui && npm install",
    "start:webview": "cd webview-ui && npm run start",
    "build:webview": "cd webview-ui && npm run build",
    "test:webview": "cd webview-ui && npm run test",
    "publish:marketplace": "vsce publish && ovsx publish",
    "lint": "biome check src/",
    "lint:fix": "biome check src/ --fix",
    "format": "biome format src/"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/diff": "^5.2.1",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/should": "^11.2.0",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "should": "^13.2.3",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@anthropic-ai/bedrock-sdk": "^0.10.2",
    "@anthropic-ai/sdk": "^0.26.0",
    "@anthropic-ai/vertex-sdk": "^0.4.1",
    "@google/generative-ai": "^0.18.0",
    "@modelcontextprotocol/sdk": "^1.0.1",
    "@types/clone-deep": "^4.0.4",
    "@types/get-folder-size": "^3.0.4",
    "@types/pdf-parse": "^1.1.4",
    "@types/turndown": "^5.0.5",
    "@vscode/codicons": "^0.0.36",
    "axios": "^1.7.4",
    "cheerio": "^1.0.0",
    "chokidar": "^4.0.1",
    "clone-deep": "^4.0.1",
    "default-shell": "^2.2.0",
    "delay": "^6.0.0",
    "diff": "^5.2.0",
    "execa": "^9.5.2",
    "fast-deep-equal": "^3.1.3",
    "get-folder-size": "^5.0.0",
    "globby": "^14.0.2",
    "isbinaryfile": "^5.0.2",
    "mammoth": "^1.8.0",
    "monaco-vscode-textmate-theme-converter": "^0.1.7",
    "openai": "^4.61.0",
    "os-name": "^6.0.0",
    "p-wait-for": "^5.0.2",
    "pdf-parse": "^1.1.1",
    "puppeteer-chromium-resolver": "^23.0.0",
    "puppeteer-core": "^23.4.0",
    "serialize-error": "^11.0.3",
    "simple-git": "^3.27.0",
    "strip-ansi": "^7.1.0",
    "tree-sitter-wasms": "^0.1.11",
    "turndown": "^7.2.0",
    "web-tree-sitter": "^0.22.6",
    "zod": "^3.23.8"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,json,jsonc}": [
      "biome check --apply --no-errors-on-unmatched"
    ]
  }
}
